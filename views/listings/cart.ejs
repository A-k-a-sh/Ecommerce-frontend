<%- layout('/layouts/boilerplate.ejs') %>

    <style>
        /* Container */
        .cart-container {
            background: linear-gradient(135deg, #1a1a1a, #333);
            color: #fff;
            padding: 20px;
            max-width: 800px;
            /* margin: 0 auto; */
            padding: 20px;
            border-radius: 20px;
            background: #222;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            opacity: 0;
            animation: slide 1s ease-in-out 1 forwards;
            /* width: 100%; */
            width: 100vw;
            /* border: 2px solid #ff6ec4; */
        }

        @keyframes  slide{
            0% {
                opacity: 0;
                transform: translateX(130%);
            }

            60% {
                opacity: 1;
                transform: translateX(-30px);
            }

            80% {
                transform: translateX(10px);
            }

            100% {
                opacity: 1;
                filter: blur(0px);
                transform: translateX(0);
                width: 100%;
                overflow: hidden;
            }
        }

        h1 {
            text-align: center;
            color: #ff6ec4;
            margin-bottom: 20px;
        }

        /* Cart Item */
        .cart-item {
            /* border: 2px solid red; */
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #444;
        }

        .cart-item img {
            width: 80px;
            border-radius: 10px;
        }

        .item-details {
            /* border: 2px solid rgb(9, 224, 138); */
            flex: 1;
            padding: 0 15px;
        }

        .item-price {
            color: #ff6ec4;
            font-size: 1.2em;
        }

        .remove-button {

            background-color: #ff6ec4;
            width: 80px;
            height: 30px;
            color: #fff;
            border: none;
            /* padding: 2px 10px; */
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            transition: background 0.3s;
        }

        .remove-button:hover {
            background-color: #ff3d85;
        }

        /* Total Price */
        .total-price {
            font-size: 1.5em;
            text-align: right;
            margin-top: 20px;
        }

        /* Checkout Button */
        .checkout-button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #42e695;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            margin-top: 20px;
            transition: background 0.3s;
        }

        .checkout-button:hover {
            background-color: #30cfd0;
        }

        @media (max-width: 768px) {
            .cart-container {
                max-width: 100vw;
            }
        }

       
    </style>
    
  <%- include('../includes/flash.ejs') %>

    <body>

        <div class="cart-container mt-[8rem] mb-[4rem] mx-auto">
            <h1 class="text-3xl">Your Shopping Cart</h1>

            <!-- Example Cart Items -->


            <% Products.forEach(product => { %>
                <div class="cart-item">
                    <img src="<%= product.image %>" alt="Stylish Sneakers">
                    <div class="item-details">
                        <h3><%= product.product_name %></h3>
                        <div class="item-price">$<%= product.price %> X <%= product.quantity %> </div>
                    </div>
                    <a class="remove-button" href="/cart/remove/<%= product.product_id %>">Remove</a>
                </div>
            <% }) %>

            

            <div class="total-price">Total: $<%= price %></div>
            <a href="/checkout" class="checkout-button">Proceed to Checkout</a>
        </div>

    </body>








  