<%- layout('/layouts/boilerplate.ejs') %>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }


        .bidding-container {
            margin: 8rem auto;
            width: 90%;
            max-width: 600px;
            padding: 20px;
            border-radius: 20px;
            background: #222;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            text-align: center;
            animation: fadeIn 1s ease forwards;
            overflow: hidden;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .product-image {
            width: 100%;
            height: 300px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            border-radius: 15px;
        }

        .product-info h1 {
            font-size: 2em;
            margin-bottom: 10px;
            color: #ff6ec4;
        }

        .current-bid,
        .timer,
        .bid-section {
            font-size: 1.5em;
            margin: 15px 0;
            color: #42e695;
        }

        .timer {
            color: #ffcc00;
        }

        .bid-section input[type="number"] {
            padding: 10px;
            font-size: 1em;
            width: 100%;
            max-width: 200px;
            margin-top: 10px;
            border-radius: 5px;
            border: none;
        }

        .place-bid {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1em;
            color: #fff;
            background: #42e695;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .place-bid:hover {
            background: #30cfd0;
        }

        .bid-result {
            margin-top: 20px;
            font-size: 1.2em;
            color: #ff6ec4;
        }
    </style>
<%- include('../includes/flash.ejs') %>

    <body>

        <div class="bidding-container">
            <div class="product-image">
                <img src="<%= productDetails.image %>" alt="">
            </div>
            <div class="product-info">
                <h1>
                    <%= productDetails.product_name %>
                </h1>
                <p class="text-white">
                    <%= productDetails.description %><br>
                </p>

                <div class="current-bid">Current Highest Bid: $<span id="currentBid">
                        <%= bidDetails.bid_amount %>
                    </span></div>
                <div class="timer">Bid will end at : <span id="countdown">
                        <%= bidDetails.ending_time %>
                    </span></div>

                <form action="/bid" method="POST" class="bid-section">

                    <input type="number" name="bidAmount" id="bidAmount" placeholder="Enter your bid"
                        min="<%= bidDetails.bid_amount  %>" />

                    <button class="place-bid" type="submit" id="placeBidBtn">Place Bid</button>
                </form>

                <div class="bid-result" id="bidResult"></div>

                <% if (highestBidder) { %>
                    <div class="bid-result" id="bidResult">
                         Highest Bidder : <%= highestBidder %>
                    </div>
                    <% } %>
            </div>
        </div>

        <script>



            const form = document.querySelector('.bid-section');


            // Countdown Timer
            let timeLeft = 37; // 5 minutes in seconds
            const countdownElement = document.getElementById('countdown');
            // const updateTimer = () => {
            //     const minutes = Math.floor(timeLeft / 60);
            //     const seconds = timeLeft % 60;
            //     countdownElement.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            //     if (timeLeft > 0) {
            //         timeLeft--;
            //     } else {
            //         document.getElementById("placeBidBtn").disabled = true;
            //         document.getElementById("bidResult").textContent = "Bidding has ended!";
            //     }
            // };
            // setInterval(updateTimer, 1000);

            // Bidding Logic

            const currentBidElement = document.getElementById('currentBid');
            const bidAmountInput = document.getElementById('bidAmount');
            const bidResultElement = document.getElementById('bidResult');

            let currentBid = parseFloat(currentBidElement.textContent); // Ensure it's a number

            document.getElementById('placeBidBtn').addEventListener('click', (e) => {

                e.preventDefault();

                const bidAmount = parseFloat(bidAmountInput.value);

                if (!bidAmount || bidAmount <= currentBid) {
                    bidResultElement.textContent = `Bid too low! You must bid higher than $${currentBid}.`;
                } else {
                    bidResultElement.textContent = '';
                    console.log("Submitting form..."); // Debugging line

                    form.submit(); // Submit the form
                }
            });
        </script>

    </body>