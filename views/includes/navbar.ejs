<style>
    nav {
        background: rgba(20, 20, 20, 0.8);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 50px;
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(10px);
    }

    nav .logo {
        font-size: 1.8em;
        font-weight: bold;
        color: #ffffff;
    }

    nav .nav-links a {
        margin-left: 25px;
        text-decoration: none;
        color: #aaa;
        font-size: 1em;
        transition: 0.3s;
    }

    nav .nav-links a:hover {
        color: #fff;
    }
</style>

<nav>
    <div class="flex flex-row gap-3 justify-center items-center">
        <div class="logo">EasyBuy</div>
        <div class="flex justify-center items-center gap-3">
            <input  
                type="text"
                class="bg-white rounded-lg outline-none h-8 border text-black px-2 py-1 border-gray-300"
            >
            <button id="search" class="bg-yellow-500 rounded-lg outline-none h-8 border text-black px-2 py-1 border-gray-300">Search</button>

            <script>
                const search = document.getElementById("search");
                const input = document.querySelector("input");
                search.addEventListener("click", () => {
                    window.location.href = `/searchResult?searchQuery=${input.value}`;
                });
            </script>
        </div>


    </div>
    
    <div class="nav-links">
        <a href="/">Home</a>
        <a href="/listings#allProducts">Shop</a>
        
        <a href="/cart">Cart</a>

        <a href="/faq">FAQ</a>
        <% if (currentUser && currentUser.type.toString()==="admin" ) { %>
                <a href="/admin/dashboard/manageProduct">Dashboard</a>
                <% } %>

        <% if (!currentUser) { %>

               <a href="/loginSignup">Login</a>
            <% } %>

            <% if (currentUser && currentUser.type.toString()==="customer") { %>
                <a class=""  href="/loginSignup/logout">Logout</a>
                <a href="/profile/user">Profile</a>
            <% } %>

    </div>
</nav>


<script>
    // Toggle mobile menu
    const hamburgerrr = document.getElementById("hamburgerrr");
    const navLinks = document.querySelector(".navbar-container-mobile");

    hamburgerrr.addEventListener("click", () => {
        navLinks.classList.toggle("active");
        const icon = hamburgerrr.querySelector("i");
        if (navLinks.classList.contains("active")) {
            icon.classList.remove("fa-bars");
            icon.classList.add("fa-xmark"); // Replace with cross icon
        } else {
            icon.classList.remove("fa-xmark");
            icon.classList.add("fa-bars"); // Revert to hamburger icon
        }
    });

    document.querySelector('.has-submenu-mobile').addEventListener('click', () => {
        document.querySelector('.sub-menu-mobile').classList.toggle('active');
    })

</script>