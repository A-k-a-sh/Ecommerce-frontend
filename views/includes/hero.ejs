  <title>E-Commerce Homepage</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: #0e0e0e;
      color: #fff;
      line-height: 1.6;
    }

    nav {
      background: rgba(20, 20, 20, 0.8);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 50px;
      position: sticky;
      top: 0;
      z-index: 1000;
      backdrop-filter: blur(10px);
    }

    nav .logo {
      font-size: 1.8em;
      font-weight: bold;
      color: #ffffff;
    }

    nav .nav-links a {
      margin-left: 25px;
      text-decoration: none;
      color: #aaa;
      font-size: 1em;
      transition: 0.3s;
    }

    nav .nav-links a:hover {
      color: #fff;
    }

    header {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 100px 20px 60px;
      background: radial-gradient(ellipse at center, #1a1a1a 0%, #0e0e0e 100%);
    }

    header h1 {
      font-size: 3.5em;
      margin-bottom: 20px;
      background: linear-gradient(90deg, #f8d800, #ff6a00);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      opacity: 0;
      animation: headerText 1s ease-in-out forwards;
    }

    @keyframes headerText {
      from {
        opacity: 0;
        transform: translateY(-100px);
      }

      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    header p {
      font-size: 1.2em;
      max-width: 600px;
      color: #ccc;
      margin-bottom: 30px;
      animation: paragraphText 1s 0.3s ease-in-out forwards;
      opacity: 0;
    }

    @keyframes paragraphText {
      from {
        opacity: 0;
        transform: translateX(50px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .btn {
      padding: 12px 28px;
      font-size: 1em;
      border: none;
      border-radius: 8px;
      background: linear-gradient(to right, #43e97b, #38f9d7);
      color: #000;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.5s;
      animation: btnAnimation 0.4s 1s ease forwards;
      opacity: 0;
    }

    .btn:hover {
      transform: scale(1.05);
      background: linear-gradient(to left, #43e97b, #4fb3a1);
    }

    @keyframes btnAnimation {
      from {
        opacity: 0;
        scale: 0;
      }

      to {
        opacity: 1;
        scale: 1;
      }
    }





    section.products {

      padding: 60px 40px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 30px;
      background: #111;

      opacity: 0;
      animation: productsAnimation 1s 1.3s ease-in-out forwards;

    }

    @keyframes productsAnimation {
      from {
        opacity: 0;
        transform: translateY(80px)();
        scale: 0;
      }

      to {
        opacity: 1;
        transform: translateY(0);
        scale: 1;
      }
    }

    .product-card {
      background: #1b1b1b;
      border-radius: 16px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(255, 255, 255, 0.1);
    }

    .product-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 15px;
    }

    .product-card h3 {
      margin-bottom: 10px;
      font-size: 1.1em;
    }

    .product-card p {
      font-size: 0.9em;
      color: #aaa;
    }

    @media (max-width: 768px) {
      nav {
        flex-direction: column;
        gap: 10px;
      }

      nav .nav-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }
    }
  </style>
</head>

